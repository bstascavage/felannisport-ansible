service:
  type: LoadBalancer
  externalIPs: [{{ charts.influxdb.lb_ip_address }}]

image:
  repository: "{{ charts.influxdb.image_name }}"
  tag: "{{ charts.influxdb.image_version }}"

persistence:
  enabled: false

initScripts:
  enabled: true
  scripts:
    init.iql: |+
      CREATE DATABASE "smartthings" WITH DURATION 30d